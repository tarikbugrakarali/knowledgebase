@model Login
@{
    Layout = null;
}
<head>
    <meta charset="utf-8" />

    <title>Gomac Knowledgebase</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- LOADING STYLESHEETS -->
    <link href="/css/bootstrap.css" rel="stylesheet">
    <link href="/css/login.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row main-content bg-success text-center">
            <div class="col-md-4 text-center company__info">
                <span class="company__logo">
                    <img src="/images/abb.jpg" height="74" width="52" alt="logo">
                </span>
                <h4 class="company_title">Ankara Büyükşehir Belediyesi</h4>
            </div>
            <div class="col-md-8 col-xs-12 col-sm-12 login_form ">
                <div class="container-fluid">
                    <div class="row">
                        <h2>Giriş Yap</h2>
                    </div>
                    <div class="row">
                        <form class="form-group" method="post">
                            <div class="row">
                                <input type="text" asp-for="Username" id="username" class="form__input" placeholder="Kullanıcı Adı">
                            </div>
                            <div class="row">
                                <!-- <span class="fa fa-lock"></span> -->
                                <input type="password" asp-for="Password" id="password" class="form__input" placeholder="Şifre">
                            </div>
                            <div class="row">
                                <input type="checkbox" name="remember_me" id="remember_me" class="">
                                <label for="remember_me">Beni Hatırla!</label>
                            </div>
                            <div class="row">
                                <input type="submit" value="Giriş Yap" class="btn">
                            </div>
                        </form>
                    </div>
                    <div class="row">
                        <p>Bir Hesabınız Yok mu? <a href="https://localhost:44367/Home/Register">Buradan Kayıt Olun</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
</body>