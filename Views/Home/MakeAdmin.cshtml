@model LoginViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-md-8 padding-20">
    <form method="post">
        <div class="form-group" method="post">
            <label for="exampleInputEmail1">Admin yapmak istediğiniz kullanıcının ID'sini yazınız:</label>
            <input asp-for="User.Id" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="ID giriniz">
            <button type="submit" class="btn btn-success">Admin Yap</button>
        </div>
    </form>
</div>

<div class="col-md-8 padding-20">
    <br />
    <b> ADMIN LİSTESİ</b>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Kullanıcı Adı</th>
                <th scope="col">Şifre</th>

                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var Login in Model.users)
            {
            <tr>

                @if ((Boolean)@Login.Admin && @Login.Admin != null)
                {
                    <td>@Login.Id    </td>
                    <td>@Login.Username  </td>
                    <td>@Login.Password  </td>

                }
            </tr>
            }


        </tbody>
    </table>
</div>

<div class="col-md-8 padding-20">
    <br />
    <b> KULLANICI LİSTESİ</b>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Kullanıcı Adı</th>
                <th scope="col">Şifre</th>

                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var Login in Model.users)
            {
                <tr>

                    @if (!(Boolean)@Login.Admin && @Login.Admin != null)
                    {
                        <td>@Login.Id    </td>
                        <td>@Login.Username  </td>
                        <td>@Login.Password  </td>


                    }
                </tr>
            }


        </tbody>
    </table>
</div>  